<%- include("partials/header") %> 
<div id="bufferContainer">
    <div class="container">
        <h1 align="center" style="width: 30%; margin: 25px auto;"><%= semester.year %></h1>
        <h1 align="center" style="width: 30%; margin: 25px auto;"><%= semester.season %></h1>
        <div class="row">
            <div style="width: 30%; margin: 25px auto;">
                <form class="semesterForm" action="/semesters" method ="">
                    <div class="form-group">
                        <input class="form-control" type="text" name="semester[year]" placeholder="<%= semester.year %>" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="semester[season]" placeholder="<%= semester.season %>" required>
                    </div>
                    <div class="form-group">
                        <button id="add" class="btn btn-lg btn-primary btn-block">Add Class</button>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Save</button>
                    </div>
                </form>
                <a href="/">Back</a>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") %> 
<%- include("partials/header") %>    

<div id="bufferContainer">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add a New Semester</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/semesters" method ="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="semester[year]" placeholder="Year" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="semester[season]" placeholder="Fall, Spring, or Summer" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/">Back</a>
            </div>
        </div>
    </div>
</div>


<%- include("partials/footer") %>    